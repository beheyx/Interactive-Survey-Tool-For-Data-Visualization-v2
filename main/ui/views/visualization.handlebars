<!-- Edit Visualization Page -->
<div class="page-actions">
  <a href="/existing-visualizations" class="back-button">← Back to Visualizations</a>
  <form action="/visualizations/{{id}}/DELETE" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this visualization? This action cannot be undone.');">
    <button type="submit" class="action-button action-button-danger">Delete Visualization</button>
  </form>
</div>

<main class="content-wrap">
  <div class="visual-edit-container" style="height: calc(100vh - 180px);">
    <iframe
      src="{{visualURL}}/{{id}}?editor=true"
      height="100%"
      width="100%"
      title="Visualization Editor"
      style="border: 1px solid #e5e7eb; border-radius: 12px;"
    ></iframe>
  </div>
</main>
