<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Register — Interactive Survey Tools</title>
  <link rel="stylesheet" href="/style.css" />
</head>
<body>
  <div class="wrap">
    <!-- Banner -->
    <div class="title">
      <h1>Interactive Survey Tools for Data Visualizations</h1>
    </div>

    <!-- Navigation -->
    <nav class="nav" aria-label="Site">
      <a class="pill" href="/home">Home</a>
      <a class="pill" href="/faq">FAQ</a>
      <a class="pill" href="/about">About Us</a>
    </nav>

    <!-- Stage -->
    <div class="stage">
      <form id="registerForm" action="/users" method="POST"
            style="margin:auto; width:100%; max-width:600px; background:transparent; text-align:center;">
        <h2 style="font-size:34px; font-weight:500; color:#555; margin:40px 0;">Create Account</h2>


        <div style="display:grid; grid-template-columns:180px 1fr; align-items:center; gap:14px; margin-bottom:18px;">
            <label for="name" style="text-align:right; font-weight:500; font-size:20px; color:#555;">Email Address:</label>
            <input type="text" id="email" name="name" placeholder="name"
                value="{{name}}"
                style="padding:10px; font-size:18px; border:2px solid var(--line); border-radius:8px; background:#f3f3f3; width:350px;">
        </div>

        <div style="display:grid; grid-template-columns:180px 1fr; align-items:center; gap:14px; margin-bottom:18px;">
            <label for="password" style="text-align:right; font-weight:500; font-size:20px; color:#555;">Password:</label>
            <input type="password" id="password" name="password" placeholder="password"
            value="{{password}}"
            style="padding:10px; font-size:18px; border:2px solid var(--line); border-radius:8px; background:#f3f3f3; width:350px;">       
        </div>

        <div style="display:grid; grid-template-columns:180px 1fr; align-items:center; gap:14px; margin-bottom:32px;">
            <label for="confirm" style="text-align:right; font-weight:500; font-size:20px; color:#555;">Confirm Password:</label>
            <input type="password" id="confirm" name="confirm_password" placeholder="confirm password"
            value="{{confirm_password}}"
            style="padding:10px; font-size:18px; border:2px solid var(--line); border-radius:8px; background:#f3f3f3; width:350px;">       
        </div>

        <button class="btn" type="submit" style="margin-top:6px;">Register</button>
        <p style="margin-top:16px; font-size:16px; color:#c00;">{{error}}</p>
      </form>
    </div>

    <!-- Auth links below -->
    <div class="auth" style="margin-top:-12px;">
    </div>
  </div>

  <!-- Success Popup -->
  <div id="successPopup" class="popup">
    <div class="popup-content" style="position:relative; text-align:center;">
      <button id="closePopup"
        style="position:absolute; top:8px; right:12px; background:none; border:none; color:#555; font-size:22px; cursor:pointer;">×</button>
      <h2 style="margin-top:10px;">Success!</h2>
      <p>Your account has been created successfully.</p>
      <a class="btn" href="/login" style="display:inline-block; margin-top:10px;">Go to Login</a>
    </div>
  </div>

  <script>
    // Show popup only when ?success=true or backend sets {{success}}
    const popup = document.getElementById('successPopup');
    if (window.location.search.includes('success=true') || "{{success}}" === "true") {
      popup.style.display = 'flex';
    }

    // Allow closing the popup
    document.getElementById('closePopup').addEventListener('click', () => popup.style.display = 'none');
    popup.addEventListener('click', e => { if (e.target === popup) popup.style.display = 'none'; });
  </script>
</body>
</html>

