<!-- Title bar -->
<header class="app-header" role="banner">
  <h1>Interactive Survey Tools for Data Visualizations</h1>
</header>

<!-- Top nav -->
<nav class="top-nav" aria-label="Primary">
  <div class="nav-left">
  </div>
  <ul class="nav-actions">
    <li><a class="pill" href="/">Home</a></li>
    <li><a class="pill" href="/faq.html" target="_blank" rel="noopener">FAQ</a></li>
    <li><a class="pill" href="/about">About Us</a></li>
  </ul>
  <div class="nav-right">
    <form action="/users/logout" method="POST">
      <button class="pill" type="submit">Logout</button>
    </form>
  </div>
</nav>

<!-- Cards row -->
<main class="cards" role="main">
  <!-- Card 1: Create/Edit Images (Visualizations) -->
  <section class="card">
  <h2>Create/Edit Images</h2>
  <p class="sub-links">
    <a href="#visualizationsPopup">New</a>
    <span aria-hidden="true"> | </span>
    <a href="/existing-visualizations">Existing</a>
  </p>
</section>

<section class="card">
  <h2>Design Surveys</h2>
  <p class="sub-links">
    <a href="#surveyDesignsPopup">New</a>
    <span aria-hidden="true"> | </span>
    <a href="/existing-survey-designs">Existing</a>
  </p>
</section>

<section class="card">
  <h2>Published Surveys</h2>
  <p class="sub-links">
    <a href="/existing-published-surveys">Existing</a>
  </p>
</section>
</main>

<!-- Existing lists (kept below, jump-linked from the cards) -->
<section id="visualizations-list" class="list-block">
  <h3>Visualizations</h3>
  <a class="new-button" href="#visualizationsPopup">+ New</a>
  <div id="visualizations">
    {{#each visualizations}}
      {{> visualizationListItem}}
    {{/each}}
    <p>{{visError}}</p>
  </div>
</section>

<section id="survey-designs-list" class="list-block">
  <h3>Survey Designs</h3>
  <a class="new-button" href="#surveyDesignsPopup">+ New</a>
  <div id="surveyDesigns">
    {{#each surveyDesigns}}
      {{> surveyDesignListItem}}
    {{/each}}
    <p>{{surError}}</p>
  </div>
</section>

<section id="published-surveys-list" class="list-block">
  <h3>Published Surveys</h3>
  <div id="publishedSurveys">
    {{#each publishedSurveys}}
      {{> publishedSurveyListItem}}
    {{/each}}
    <p>{{pSurError}}</p>
  </div>
</section>

<!-- Popups (unchanged except for title copy) -->
<div class="popup" id="visualizationsPopup">
  <div class="popup-content">
    <h2>Create a New Visualization</h2>
    <form action="/visualizations" method="POST">
      <input type="text" name="name" placeholder="visualization name" />
      <button class="popup-create-button" id="create-visualization-button">Create</button>
    </form>
    <a class="popup-cancel-button" href="#">Cancel</a>
  </div>
</div>

<div class="popup" id="surveyDesignsPopup">
  <div class="popup-content">
    <h2>Create a New Survey Design</h2>
    <form action="/surveyDesigns" method="POST">
      <input type="text" name="name" placeholder="survey design name" />
      <button class="popup-create-button" id="create-survey-design-button">Create</button>
    </form>
    <a class="popup-cancel-button" href="#">Cancel</a>
  </div>
</div>
