<!-- Cards row -->
<main class="cards" role="main">
  <!-- Card 1: Create/Edit Images (Visualizations) -->
  <section class="card">
  <h2>Create/Edit Images</h2>
  <div class="card-actions">
    <a href="#visualizationsPopup" class="card-button card-button-primary">New</a>
    <a href="/existing-visualizations" class="card-button card-button-secondary">Existing</a>
  </div>
</section>

<section class="card">
  <h2>Design Surveys</h2>
  <div class="card-actions">
    <a href="#surveyDesignsPopup" class="card-button card-button-primary">New</a>
    <a href="/existing-survey-designs" class="card-button card-button-secondary">Existing</a>
  </div>
</section>

<section class="card">
  <h2>Published Surveys</h2>
  <div class="card-actions">
    <a href="/existing-published-surveys" class="card-button card-button-secondary">View All</a>
  </div>
</section>
</main>

<!-- Popups (unchanged except for title copy) -->
<div class="popup" id="visualizationsPopup">
  <div class="popup-content">
    <h2>Create a New Visualization</h2>
    <form action="/visualizations" method="POST">
      <input type="text" name="name" placeholder="visualization name" />
      <button class="popup-create-button" id="create-visualization-button">Create</button>
    </form>
    <button type="button" class="popup-cancel-button" onclick="window.location.hash=''">Cancel</button>
  </div>
</div>

<div class="popup" id="surveyDesignsPopup">
  <div class="popup-content">
    <h2>Create a New Survey Design</h2>
    <form action="/surveyDesigns" method="POST">
      <input type="text" name="name" placeholder="survey design name" />
      <button class="popup-create-button" id="create-survey-design-button">Create</button>
    </form>
    <button type="button" class="popup-cancel-button" onclick="window.location.hash=''">Cancel</button>
  </div>
</div>
